<p id="notice"><%= notice %></p>

<h1>Listing Floorings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @floorings.each do |flooring| %>
      <tr>
        <td><%= flooring.name %></td>
        <td><%= link_to 'Show', flooring %></td>
        <td><%= link_to 'Edit', edit_flooring_path(flooring) %></td>
        <td><%= link_to 'Destroy', flooring, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flooring', new_flooring_path %>
