<!DOCTYPE html>
<html>
<head>
  <title>Sp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= nav_bar static: :top, brand: "Home", responsive: true do %>

	<% if !current_person %>
	 	<%= menu_group pull: :right do %>

	            <%= menu_item "Register",  home_register_as_path %>
              <%= menu_item "Login",  home_login_as_path %>

	    <% end %>
	<% end %>

  <% if current_user %>
	    <%= menu_group pull: :right do %>

	            <%= menu_item "Log Out",  destroy_user_session_path, :method => :delete %>

	    <% end %>
   <% end %>
   <% if current_customer %>
	    <%= menu_group pull: :right do %>

	            <%= menu_item "Cusomer Log Out",  destroy_customer_session_path, :method => :delete %>

	    <% end %>
   <% end %>
   <% if current_broker %>
	    <%= menu_group pull: :right do %>

	            <%= menu_item "Broker Log Out",  destroy_broker_session_path, :method => :delete %>

	    <% end %>
   <% end %>
   <% if current_agent %>
	    <%= menu_group pull: :right do %>
      <%= menu_item "My properties",  properties_path %>
	        	<%= menu_item "Agent edit",  edit_agent_registration_path %>
	            <%= menu_item "Agent Log Out",  destroy_agent_session_path, :method => :delete %>

	    <% end %>
   <% end %>
   <% if current_admin %>
   		<%= render "layouts/admin_navigation" %>
   <% end %>
<% end %>
<div class="container">
<%if notice %>
	<div class="alert alert-success"><%= notice %></div>
<%end%>
<%if alert %>
	<div class="alert alert-danger"><%= alert %></div>
<%end%>
<%= yield %>
</div>
</body>
</html>
