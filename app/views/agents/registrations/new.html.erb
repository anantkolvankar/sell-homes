<h2>Sign up as Agent</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
        <legend>Login deatils</legend>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
<br>
    <legend> Company deatils</legend>
    <%= f.simple_fields_for :agent_info_attributes do |ai| %>
      <%= ai.input :company %>
      <%= ai.input :title %>
      <%= ai.input :operational_since %>
      <%= ai.input :description %>
      <%= ai.input :title %>
      <%= ai.input :authorize_agent %>

    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "agents/shared/links" %>
